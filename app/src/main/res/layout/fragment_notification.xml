<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".fragments_home_screen.NotificationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="0dp"
                android:paddingEnd="20dp">

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/proximanova_semibold"
                    android:letterSpacing="0.05"
                    android:text="@string/notification"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:contentDescription="@string/morebutton"
                    android:src="@drawable/ic_more_horiz_white_24dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:contentDescription="@string/backbutton"
                    android:src="@drawable/ic_arrow_back_white_18dp" />
            </FrameLayout>

        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:id="@+id/ScrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/confirm"
                    android:layout_width="0dp"
                    android:layout_height="53.4dp"
                    android:layout_marginTop="53dp"
                    android:background="@drawable/btn_rounded_green_borderless"
                    android:fontFamily="@font/proximanova_semibold"
                    android:text="@string/confirm"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:textSize="16.5sp"
                    app:layout_constraintLeft_toLeftOf="@id/doctorCard"
                    app:layout_constraintRight_toRightOf="@id/doctorCard"
                    app:layout_constraintTop_toBottomOf="@id/doctorCard" />

                <Button
                    android:id="@+id/cancel_request"
                    android:layout_width="0dp"
                    android:layout_height="53.4dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginBottom="22dp"
                    android:background="@drawable/btn_rounded_not_filled_gray"
                    android:fontFamily="@font/proximanova_semibold"
                    android:text="@string/cancel_request"
                    android:textAllCaps="false"
                    android:textColor="@color/colorInputFormHint"
                    android:textSize="16.5sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/confirm"
                    app:layout_constraintRight_toRightOf="@id/confirm"
                    app:layout_constraintTop_toBottomOf="@id/confirm" />

                <ImageView
                    android:id="@+id/imageApprove"
                    android:layout_width="141dp"
                    android:layout_height="141dp"
                    android:layout_marginTop="43dp"
                    android:background="@drawable/ic_circle"
                    android:contentDescription="@string/imageapprove"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_approve"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/quote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/proximanova_regular"
                    android:gravity="center_horizontal"
                    android:letterSpacing="0.05"
                    android:lineSpacingExtra="10sp"
                    android:text="@string/Quote_notif"
                    android:textColor="@color/colorNavigationBarItem"
                    android:textSize="14.5sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/approvement" />

                <TextView
                    android:id="@+id/approvement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="43dp"
                    android:fontFamily="@font/proximanova_semibold"
                    android:gravity="center_horizontal"
                    android:letterSpacing="0.05"
                    android:text="@string/Approvement"
                    android:textColor="@color/colorInputFormName"
                    android:textSize="18.45sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageApprove" />

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:fontFamily="@font/proximanova_semibold"
                    android:gravity="center_horizontal"
                    android:letterSpacing="0.05"
                    android:text="@string/name"
                    android:textColor="@color/colorInputFormName"
                    android:textSize="17.45sp"
                    app:layout_constraintStart_toStartOf="@+id/requestDetails"
                    app:layout_constraintTop_toBottomOf="@+id/requestDetails" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:fontFamily="@font/proximanova_semibold"
                    android:gravity="center_horizontal"
                    android:letterSpacing="0.05"
                    android:text="@string/desease"
                    android:textColor="@color/colorInputFormName"
                    android:textSize="17.45sp"
                    app:layout_constraintStart_toStartOf="@id/userName"
                    app:layout_constraintTop_toBottomOf="@+id/nameOutput" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:fontFamily="@font/proximanova_semibold"
                    android:gravity="center_horizontal"
                    android:letterSpacing="0.05"
                    android:text="@string/location"
                    android:textColor="@color/colorInputFormName"
                    android:textSize="17.45sp"
                    app:layout_constraintStart_toStartOf="@id/userName"
                    app:layout_constraintTop_toBottomOf="@+id/deseaseOutput" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:fontFamily="@font/proximanova_semibold"
                    android:gravity="center_horizontal"
                    android:letterSpacing="0.05"
                    android:text="@string/description"
                    android:textColor="@color/colorInputFormName"
                    android:textSize="17.45sp"
                    app:layout_constraintStart_toStartOf="@id/userName"
                    app:layout_constraintTop_toBottomOf="@+id/locationOutput" />

                <TextView
                    android:id="@+id/nameOutput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/proximanova_regular"
                    android:gravity="center_horizontal"
                    android:letterSpacing="0.05"
                    android:text="Jojon Suehndra"
                    android:textColor="@color/colorGivenInfo"
                    android:textSize="18.45sp"
                    app:layout_constraintStart_toStartOf="@id/userName"
                    app:layout_constraintTop_toBottomOf="@id/userName" />

                <TextView
                    android:id="@+id/deseaseOutput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/proximanova_regular"
                    android:gravity="center_horizontal"
                    android:letterSpacing="0.05"
                    android:text="Sore Eyes"
                    android:textColor="@color/colorGivenInfo"
                    android:textSize="18.45sp"
                    app:layout_constraintStart_toStartOf="@id/userName"
                    app:layout_constraintTop_toBottomOf="@+id/textView7" />

                <TextView
                    android:id="@+id/locationOutput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/proximanova_regular"
                    android:gravity="center_horizontal"
                    android:letterSpacing="0.05"
                    android:text="St. Broxlyn 212"
                    android:textColor="@color/colorGivenInfo"
                    android:textSize="18.45sp"
                    app:layout_constraintStart_toStartOf="@id/userName"
                    app:layout_constraintTop_toBottomOf="@+id/location" />

                <TextView
                    android:id="@+id/descriptionOutput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="29dp"
                    android:fontFamily="@font/proximanova_regular"
                    android:lineSpacingExtra="5sp"
                    android:singleLine="false"
                    android:text="Aku ingin menjadi setitik awan kecil di langint bersama mentari yaga hah"
                    android:textColor="@color/colorGivenInfo"
                    android:textSize="18.45sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/userName"
                    app:layout_constraintTop_toBottomOf="@+id/description" />

                <TextView
                    android:id="@+id/requestDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/proximanova_semibold"
                    android:gravity="center_horizontal"
                    android:text="@string/request_details"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18.45sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/quote" />

                <TextView
                    android:id="@+id/doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="42dp"
                    android:fontFamily="@font/proximanova_semibold"
                    android:gravity="center_horizontal"
                    android:text="@string/doctor"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18.45sp"
                    app:layout_constraintStart_toStartOf="@+id/requestDetails"
                    app:layout_constraintTop_toBottomOf="@+id/descriptionOutput" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/doctorCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:elevation="0dp"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="1dp"
                    app:cardMaxElevation="0dp"
                    app:layout_constraintEnd_toEndOf="@+id/descriptionOutput"
                    app:layout_constraintStart_toStartOf="@+id/descriptionOutput"
                    app:layout_constraintTop_toBottomOf="@+id/doctor">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/avatar"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:src="@drawable/avatar"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="21dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/proximanova_semibold"
                            android:letterSpacing="0.05"
                            android:text="Dudung Sokmati"
                            android:textColor="@color/colorInputFormName"
                            android:textSize="16.5sp"
                            app:layout_constraintStart_toEndOf="@+id/avatar"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/specialty"
                            android:layout_width="135dp"
                            android:layout_height="16.2dp"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/proximanova_regular_italic"
                            android:letterSpacing="0.05"
                            android:text="Eye Specialist"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15.5sp"
                            app:layout_constraintStart_toStartOf="@+id/name"
                            app:layout_constraintTop_toBottomOf="@+id/name" />

                        <ImageView
                            android:id="@+id/star0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="9dp"
                            android:contentDescription="@string/icon_star"
                            app:layout_constraintStart_toStartOf="@+id/specialty"
                            app:layout_constraintTop_toBottomOf="@+id/specialty"
                            app:srcCompat="@drawable/ic_star" />

                        <ImageView
                            android:id="@+id/star1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:contentDescription="@string/icon_star"
                            app:layout_constraintLeft_toRightOf="@id/star0"
                            app:layout_constraintTop_toTopOf="@id/star0"
                            app:srcCompat="@drawable/ic_star" />

                        <ImageView
                            android:id="@+id/star2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:contentDescription="@string/icon_star"
                            app:layout_constraintLeft_toRightOf="@id/star1"
                            app:layout_constraintTop_toTopOf="@id/star1"
                            app:srcCompat="@drawable/ic_star" />

                        <ImageView
                            android:id="@+id/star3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:contentDescription="@string/icon_star"
                            app:layout_constraintLeft_toRightOf="@id/star2"
                            app:layout_constraintTop_toTopOf="@id/star2"
                            app:srcCompat="@drawable/ic_star" />

                        <ImageView
                            android:id="@+id/star4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:contentDescription="@string/icon_star"
                            app:layout_constraintLeft_toRightOf="@id/star3"
                            app:layout_constraintTop_toTopOf="@id/star3"
                            app:srcCompat="@drawable/ic_star" />

                        <TextView
                            android:id="@+id/rating"
                            android:layout_width="wrap_content"
                            android:layout_height="17.2dp"
                            android:layout_marginStart="17dp"
                            android:fontFamily="@font/proximanova_semibold"
                            android:letterSpacing="0.05"
                            android:text="4.9"
                            android:textColor="@color/colorInputFormHint"
                            android:textSize="16.5sp"
                            app:layout_constraintStart_toEndOf="@+id/star4"
                            app:layout_constraintTop_toTopOf="@+id/star4" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>